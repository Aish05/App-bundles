<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.XLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_x_large</item>
    </style>

    <style name="TradeGothic.Bold.XLarge" parent="TextAppearance.XLarge">
        <item name="android:fontFamily">@font/tradehgothicltstd_bold</item>
    </style>

    <style name="Nunito.Bold.Small" parent="TextAppearance.Small">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Nunito.Bold.Medium" parent="TextAppearance.Medium">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

</resources>
